<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_marginLeft="5dp"
            android:id="@+id/colorPalet"
            android:background="@drawable/circle_fill"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/item"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.Small" />

        <ImageButton
            android:id="@+id/addToInventory"
            android:layout_width="10dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:contentDescription="@string/addInventory"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/inventory"/>

        <ImageButton
            android:id="@+id/removeFromWishlist"
            android:layout_width="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:contentDescription="@string/del"
            android:src="@drawable/delete"/>

    </LinearLayout>

</LinearLayout>